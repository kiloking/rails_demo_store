<h1>管理商品頁面</h1>

<%= link_to '新增一個商品', new_backend_product_path, class:'btn btn-success' %>


<h1>目前商品列表</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>商品名</th>
      <th  class="col-md-4">簡介</th>
      <th>價格</th>
      <th>上架</th>
      <th>商品圖片</th>
      <th colspan="3"></th>
      
    </tr>
  </thead>

	<tbody>
	    <% @product.each do |product| %>  
	    <tr>
	        <td><%= product.name %></td>
	        <td><%= product.description %></td>
	        <td><%= product.price %></td>
	        <td><%= product.is_online %></td>
	        <td><%= product.image %></td>
	        <td><%= link_to '查看' , backend_product_path(product) %></td>
	        <td><%= link_to '編輯' , edit_backend_product_path(product) %></td>	
	        <td><%= link_to '刪除' , backend_product_path(product),method: :delete, data: {confirm: '確定嗎?'} %></td>		
		</tr>
	    <% end %>
    </tbody>
</table>
